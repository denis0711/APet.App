@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Senha"></label>
                <input asp-for="Input.Senha" class="form-control" />
                <span asp-validation-for="Input.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmaSenha"></label>
                <input asp-for="Input.ConfirmaSenha" class="form-control" />
                <span asp-validation-for="Input.ConfirmaSenha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
    <div class="col-md-2">

    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
