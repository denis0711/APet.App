@model IEnumerable<APet.App.ViewModels.PetViewModel>

@{
    ViewData["Title"] = "Pets";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Cadastrar Pets</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-auto mb-3">
        <a asp-action="Details" asp-route-id="@item.Id">
            <div style="border: 1px solid black; box-shadow: -2px -5px 20px #000, 2px 6px 10px #808080;
">
                <img src="~/Imagens/@item.Imagem" alt="@item.Imagem" style="width: 347px; height: 200px;" /><br /><br />
                <div class="text-center">
                    <p style="font-size:23px">@item.Nome</p>
                </div><br />
            </div>

        </a>

    </div>
        

    }

</div>

